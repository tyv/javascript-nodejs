extends /layouts/main

block append variables
  - var layout_main_class = "main_width-limit-wide"
  - var layout_header_class = "main__header_center"
  - var sitetoolbar = true
  - var breadcrumbs = [ { title: 'Учебник', url: '/' }, { title: 'Курсы', url: '/courses' }]
  - var content_class = '_center'
  - var siteToolbarCurrentSection = "courses"
  - var comments = true

block append head
  script(defer src=pack("coursesCourse", "js"))

block content

  p Курс для тех, кто ранее не разрабатывал на Node.JS или хочет получить хороший level-up в этой технологии.

  include ../blocks/nodejs/programAndSignup

  input(type="checkbox" id="phone-toggler").phone-toggler__input.phone-only
  +b('label').phone-toggler.phone-only(for="phone-toggler")
    | Более подробная информация о программе курса

  include ../blocks/nodejs/programDetails
  include ../blocks/nodejs/how
  include ../blocks/nodejs/result
  include ../blocks/nodejs/systemRequirements

  +b.fixed-tab.phone-only.courses-tab
    a.courses-tab__link(href="#signup") Записаться на курсы

