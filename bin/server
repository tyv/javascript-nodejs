#!/usr/bin/env node

const config = require('config');
const co = require('co');
const app = require('app');
var fs = require('fs');

var fd = fs.openSync('/tmp/bla', 'w');

function log(str) {
  console.log(str);
  fs.writeSync(fd, str + "\n");
}

co(function*() {

  yield* app.waitBootAndListen();

  log("app is listening");

}).catch(function(err) {
  throw err;
});


process.on('message', function(msg) {
  log("MESSAGE");
  if (msg == 'shutdown') { // PM2 sends this on graceful reload
    shutdown();
  }
});

function shutdown() {
  // The process is going to be reloaded
  // Have to close all database/socket.io/* connections

  co(function*() {
    log("Closing the app...!");
    yield function(callback) {
     log("ASCLOSE 0");
     app.server.close(callback);
     log("ASCLOSE");
    };

    
    log("App closed!");
  }).then(function() {
    log("EXIT");
    process.exit(0);
  }, function(err) {
log("ERROR");
    console.error(err);
  });

  var dieDelay = process.env.PM2_GRACEFUL_TIMEOUT || 4000;
  // I have 4000ms to close all connections
  setTimeout(function() {
    console.error("App is stopping for too long! Will be killed now!");
    // kill is accomplished by PM2
  }, dieDelay - 100);

}
